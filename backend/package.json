{
  "name": "truecheckia-backend",
  "version": "1.0.0",
  "description": "Backend da aplicação TrueCheckIA para detecção de conteúdo gerado por IA",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "dev:debug": "NODE_ENV=development node -r ts-node/register --inspect src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "stop:prod": "pm2 stop ecosystem.config.js",
    "restart:prod": "pm2 restart ecosystem.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch=\"**/tests/integration/**/*.test.ts\"",
    "test:unit": "jest --testMatch=\"**/tests/unit/**/*.test.ts\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "node dist/scripts/seed.js",
    "docker:redis": "docker run -d --name truecheckia-redis -p 6379:6379 redis:7-alpine",
    "docker:stop": "docker stop truecheckia-redis || true && docker rm truecheckia-redis || true",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "migration:create": "prisma migrate dev --create-only",
    "prisma:studio": "prisma studio",
    "db:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "ai-detection",
    "deepfake-detection",
    "content-analysis",
    "api",
    "typescript",
    "nodejs",
    "express"
  ],
  "author": "TrueCheckIA Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "@prisma/client": "^5.7.0",
    "prisma": "^5.7.0",
    "dotenv": "^16.3.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "redis": "^4.6.10",
    "bull": "^4.12.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "xss": "^1.0.14",
    "express-mongo-sanitize": "^2.2.0",
    "multer": "^1.4.5-lts.2",
    "minio": "^8.0.5",
    "@types/morgan": "^1.9.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@types/bull": "^4.10.0",
    "typescript": "^5.3.0",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/truecheckia/backend.git"
  },
  "bugs": {
    "url": "https://github.com/truecheckia/backend/issues"
  },
  "homepage": "https://github.com/truecheckia/backend#readme"
}
